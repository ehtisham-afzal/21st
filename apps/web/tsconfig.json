{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
     "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "global.d.ts",
    ".next/types/**/*.ts",
    "css/combinedCSS.js",
    "video-converter/**/*.js"
, "migrate-r2/migrate-r2.ts"  ],
  "exclude": ["node_modules"]
}
